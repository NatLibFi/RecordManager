{
    "name": "natlibfi/recordmanager",
    "description": "Record management utility for VuFind",
    "authors": [
        {
            "name": "Ere Maijala",
            "email": "ere.maijala@helsinki.fi"
        }
    ],
    "license": "GPL-2.0",
    "config": {
        "platform": {
            "php": "7.4.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "RecordManager\\": "src/RecordManager/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RecordManagerTest\\": "tests/RecordManagerTest/"
        }
    },
    "provide": {
        "ext-mongodb": "*"
    },
    "require": {
        "cash/lrucache": "1.0.0",
        "laminas/laminas-mvc": "3.3.3",
        "laminas/laminas-router": "3.5.0",
        "laminas/laminas-servicemanager": "3.10.0",
        "laminas/laminas-xml": "1.4.0",
        "mongodb/mongodb": "1.11.0",
        "ocramius/proxy-manager": "2.13.1",
        "pcrov/jsonreader": "1.0.2",
        "pear/http_request2": "2.5.1",
        "phayes/geophp": "1.2",
        "symfony/console": "5.4.5",
        "symfony/lock": "5.4.5",
        "vufind-org/vufind-marc": "1.0.2",
        "wikimedia/composer-merge-plugin": "2.0.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.7.0",
        "phing/phing": "2.17.2",
        "phpstan/phpstan": "1.4.10",
        "phpunit/phpunit": "9.5.19",
        "squizlabs/php_codesniffer": "3.6.2",
        "vimeo/psalm": "4.30.0"
    },
    "scripts": {
        "qa": "phing ci-tasks"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "composer.local.json"
            ],
            "recurse": true,
            "replace": true,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": true
        }
    }
}
