{
    "name": "natlibfi/recordmanager",
    "description": "Record management utility for VuFind",
    "authors": [
        {
            "name": "Ere Maijala",
            "email": "ere.maijala@helsinki.fi"
        }
    ],
    "license": "GPL-2.0",
    "config": {
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "RecordManager\\": "src/RecordManager/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RecordManagerTest\\": "tests/RecordManagerTest/"
        }
    },
    "provide": {
        "ext-mongodb": "*"
    },
    "require": {
        "cash/lrucache": "1.0.0",
        "laminas/laminas-mvc": "3.2.0",
        "laminas/laminas-router": "3.4.5",
        "laminas/laminas-servicemanager": "3.7.0",
        "laminas/laminas-xml": "1.3.1",
        "mongodb/mongodb": "1.8.0",
        "ocramius/proxy-manager": "2.2.3",
        "pear/http_request2": "2.5.0",
        "phayes/geophp": "1.2",
        "symfony/console": "5.3.7",
        "symfony/lock": "5.3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.1.0",
        "phing/phing": "2.17.0",
        "phpmd/phpmd": "2.10.2",
        "phpstan/phpstan": "0.12.99",
        "phpunit/phpunit": "8.5.21",
        "squizlabs/php_codesniffer": "3.6.1",
        "vimeo/psalm": "4.11.2"
    },
    "scripts": {
        "qa": "phing ci-tasks"
    }
}
